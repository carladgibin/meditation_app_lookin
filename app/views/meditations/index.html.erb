<div class="header">
  <div class="sticky">
    <div class="logo">
      <%= link_to root_path do %>
        <%= image_tag "lookin-logo.png" %>
      <% end %>
    </div>

    <div class="user">
      <% if current_user %>
      <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
      <% else %>
      <%= link_to 'Sign up', new_user_registration_path, :class => "button" %>

      <%= link_to 'Sign in', new_user_session_path, :class => "button" %>
      <% end %>
    </div>
  </div>


<p id="notice"><%= notice %></p>

<div class="add_meditation">
<h2>Meditations</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Category</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meditations.each do |meditation| %>
      <tr>
        <td><%= meditation.title %></td>
        <td><%= meditation.description %></td>
        <td><%= meditation.image_url %></td>
        <td><%= meditation.category %></td>
        <td><%= meditation.price %></td>
        <td><%= link_to 'Show', meditation, :class => "button2" %></td>
        <td><%= link_to 'Edit', edit_meditation_path(meditation), :class => "button2" %></td>
        <td><%= link_to 'Destroy', meditation, :class => "button2", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Meditation', new_meditation_path, :class => "button" %>
</div>

  <div class="footerWrap">
    <div class="footer">
      <div class="footerContent">
        <hr><br>
        <p>2019 All the rights reserved to Lookin Meditation</p>
      </div>     
    </div>
  </div>

</div>
